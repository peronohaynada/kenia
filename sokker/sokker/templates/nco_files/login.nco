<div id="loginForm">
	<form action="?login" method="post">
		<div class="label"><label for="username">username:</label></div>
		<div class="input"><input type="text" id="username" name="username"></div>
		<div class="label"><label for="password">password:</label></div>
		<div class="input"><input type="password" id="password" name="password"></div>
		<div class="label">&nbsp;</div>
		<div class="input"><input type="submit" value="Login"></div>
	</form>
	[login_error]
</div>